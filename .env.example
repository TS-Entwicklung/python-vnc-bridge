# VNC Configuration
# Optional: Set a password for VNC access (leave empty for no authentication)
# VNC_PASSWORD=changeme123
VNC_PASSWORD=

# Port Configuration
VNC_PORT=5900
NOVNC_PORT=6080

# Display Settings
DISPLAY_WIDTH=800
DISPLAY_HEIGHT=600
VNC_FPS=15

# Audio Support (true/false)
# Note: Audio may impact performance on ARM devices
ENABLE_AUDIO=false

# Optional: Color depth (16 or 24)
# Lower values improve performance on BananaPi
VNC_COLOR_DEPTH=16

# ==========================================
# Git Clone Configuration (Alternative to Volume Mount)
# ==========================================
# If set, the container will clone this repository to /app on startup
# Leave empty to use volume mount instead

# Git Repository URL (HTTPS)
# GIT_REPO=https://github.com/username/repository.git
GIT_REPO=

# Git Branch (optional, default: main)
# GIT_BRANCH=main
GIT_BRANCH=main

# Private Repository Authentication (optional)
# Only needed for private repositories
# Generate token at: https://github.com/settings/tokens

# GIT_USERNAME=your-github-username
GIT_USERNAME=

# GIT_TOKEN=ghp_your_personal_access_token
GIT_TOKEN=
